@model bool
@if (Model)
{
    <div style="display: flex; flex-direction: column; align-items: center">
        <div class="success">
            <div class="check-circle">
                <div class="check-circle__mark"></div>
            </div>
        </div>
        <p class="text" style="font-size: 2.5vh; margin: 1vh 0; animation: scale-in-center 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;">Новый пароль был отправлен на ваш Email!</p>
    </div>
}
else
{
    <div style="display: flex; flex-direction: column; align-items: center">
        <img src="~/Sources/frowning_face.gif" style="height: 9vh; animation: scale-in-center 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;" />
        <p class="text" style="font-size: 2.5vh; margin: 1vh 0; animation: scale-in-center 0.3s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;">Похоже пользователя с такими данными не существует, проверьте данные и попробуйте еще раз</p>
    </div>
}