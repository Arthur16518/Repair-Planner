<div id="add-task-container" class="blurred-container">
    <div id="adding-window" class="add-task-window window" style="max-width: 45vw;">
        <div id="add-results">
            <form action="/Home/AddTask" method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#add-results">
                <div class="flex-box-label-cross">
                    <h1 style="font-size: 3.5vh">Добавить задачу</h1>
                    <svg class="cross" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" onclick="CloseAddContainer()">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M17.1688 19.3591C17.7606 19.953 18.72 19.953 19.3118 19.3591C19.9035 18.7651 19.9035 17.8022 19.3118 17.2083L12.2403 10.1227L19.5562 2.79175C20.1479 2.1978 20.148 1.23492 19.5562 0.640973C18.9644 0.0470207 18.005 0.0470207 17.4133 0.640973L10.0974 7.97193L2.58673 0.445423C1.995 -0.148474 1.03558 -0.148474 0.443797 0.445423C-0.147932 1.03937 -0.147932 2.00231 0.443797 2.5962L7.95451 10.1227L0.688279 17.4038C0.0965503 17.9977 0.0964952 18.9607 0.688279 19.5546C1.28001 20.1485 2.23943 20.1485 2.83121 19.5546L10.0974 12.2734L17.1688 19.3591Z" fill="#DCDCDC" />
                    </svg>
                </div>

                <div class="flex-box-option adding-item">
                    <p class="text">Выберите тип оборудования:</p>
                    <select required class="text combobox" name="equipmentType">
                        <option value="МФУ">МФУ</option>
                        <option value="Монитор">Монитор</option>
                        <option value="Ноутбук">Ноутбук</option>
                        <option value="ПК">ПК</option>
                        <option value="Плоттер">Плоттер</option>
                        <option value="Принтер">Принтер</option>
                        <option value="Проектор">Проектор</option>
                        <option value="Сканер">Сканер</option>
                        <option value="Факс">Факс</option>
                    </select>
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Краткое описание поломки:</p>
                    <input required type="text" placeholder="Краткое описание" class="adding-input" name="shortDescription">
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Модель оборудования:</p>
                    <input required type="text" placeholder="Модель" class="adding-input" name="equipmentModel">
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Серийный номер:</p>
                    <input required type="text" placeholder="Серийный номер" class="adding-input" name="serialNumber">
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Состояние на момент получения: </p>
                    <input required type="text" placeholder="Состояние" class="adding-input" name="condition">
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Подробное описание поломки:</p>
                    <textarea class="text-area text" cols="60" rows="3" name="defects"></textarea>
                </div>
                <p class="text" style="margin-top: 1.7vh; align-self: flex-start; font-family: Inter Black">Информация о клиенте</p>
                <div class="flex-box-option adding-item">
                    <p class="text">Номер телефона:</p>
                    <input required type="text" placeholder="Номер телефона" class="adding-input" name="clientPhoneNumber">
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Фамилия клиента</p>
                    <input required type="text" placeholder="Фамилия" class="adding-input" name="clientLastName">
                </div>
                <div class="flex-box-option adding-item">
                    <p class="text">Имя клиента</p>
                    <input required type="text" placeholder="Имя" class="adding-input" name="clientFirstName">
                </div>
                <div class="flex-box-vertical">
                    <button class="button-purple" style="margin-top: 3vh;" type="submit">ДОБАВИТЬ</button>
                </div>
            </form>
        </div>
    </div>
</div>